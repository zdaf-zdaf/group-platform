# Runtime environment variables for materials_service
# Copy to .env and edit values for your environment

# Django
DEBUG=true
SECRET_KEY=dev-materials-secret-key-change-me
ALLOWED_HOSTS=*
TIME_ZONE=Asia/Shanghai
PORT=8000

# Database (MySQL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=materials_db
DB_USER=root
DB_PASSWORD=root
DB_HOST=127.0.0.1
DB_PORT=3306

# JWT (optionally align with user-service)
# JWT_SIGNING_KEY=your-shared-jwt-signing-key
# JWT_ALGORITHM=HS256
# JWT_ACCESS_MINUTES=30
# JWT_REFRESH_DAYS=1

# CORS
CORS_ALLOW_ALL_ORIGINS=true
